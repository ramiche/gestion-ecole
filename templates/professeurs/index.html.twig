{% extends 'base.html.twig' %}

{% block title %}Professeurs index{% endblock %}

{% block body %}
    <h1>Professeurs index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>NomProfesseur</th>
                <th>PrenomProfesseur</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for professeur in professeurs %}
            <tr>
                <td>{{ professeur.id }}</td>
                <td>{{ professeur.nomProfesseur }}</td>
                <td>{{ professeur.prenomProfesseur }}</td>
                <td>
                    <a href="{{ path('app_professeurs_show', {'id': professeur.id}) }}">show</a>
                    <a href="{{ path('app_professeurs_edit', {'id': professeur.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_professeurs_new') }}">Create new</a>
{% endblock %}
